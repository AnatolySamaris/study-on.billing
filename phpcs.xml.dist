<?xml version="1.0"?>
<ruleset name="PHP CS PSR2">
    <description>PSR2 Code Sniffer Config.</description>

    <!-- Использовать стандарт PSR2 -->
    <rule ref="PSR2"/>

    <!-- Проверять все файлы в проекте -->
    <file>.</file>

    <!-- Игнорировать папки -->
    <exclude-pattern>vendor/*</exclude-pattern>
    <exclude-pattern>var/*</exclude-pattern>
    <exclude-pattern>public/*</exclude-pattern>

</ruleset>